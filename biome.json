{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["node_modules", "**/node_modules/**", "dist", "bin"],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx",
      "lib/**/*.ts",
      "lib/**/*.tsx",
      "lib/**/*.js",
      "lib/**/*.jsx",
      "./biome.json",
      "./package.json",
      "./tsconfig.json",
      "./vite.config.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "formatWithErrors": false,
    "lineEnding": "lf",
    "ignore": [
      "node_modules",
      "docs",
      "dist",
      "public",
      "**/node_modules/**",
      "bin"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "docs",
      "dist",
      "public",
      "**/node_modules/**",
      "bin"
    ],
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
